@using Assgment_Nhom3_WebBanDienThoai.ModelsView.ThanhToan
@model Assgment_Nhom3_WebBanDienThoai.ModelsView.ThanhToan.HoaDonView
@{
   
    ViewData["Title"] = "Index";
    List<HoaDonView> lstsp = ViewBag.lstHdct;

}

<!-- Checkout Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3">
                <span class="bg-secondary pr-3">Billing Address</span>
            </h5>
            <div class="bg-light p-30 mb-5">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Tỉnh/Thành phố</label>
                        <select id="provinceSelect" onchange="getDistrict()"  asp-items="@ViewBag.TenTinh" class="form-control"></select>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Quận/Huyện</label>
                        <select id="districtSelect" onchange="getWard()" class="form-control"></select>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Xã/Phường</label>
                        <select id="wardSelect" class="form-control"></select>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Số điện thoại</label>
                        <input asp-for="Sdt" class="form-control" type="text" placeholder="+123 456 789">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Tên người nhận</label>
                        <input class="form-control" type="text" placeholder="Nguyễn Văn A">
                    </div>
                </div>
                <hr/>
                <div id="banking" class="row">
                    <div class="col-md-6 form-group">
                        <label>Số tài khoản</label>
                        <input class="form-control" type="text" placeholder="Số tài khoản">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Ngày hết hạn</label>
                        <input class="form-control" type="text" placeholder="01/12">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>CVV</label>
                        <input class="form-control" type="text" placeholder="Cvv">
                    </div>
                </div>

            </div>

        </div>
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3">
                <span class="bg-secondary pr-3">Order Total</span>
            </h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom">
                    <h6 class="mb-3">Products</h6>
                    @if (lstsp.Count >= 0)
                    {
                        @foreach (var item in lstsp)
                        {
                            <div class="d-flex justify-content-between">
                                <p>@item.TenSp</p>
                                <p>@item.DonGia</p>
                            </div>
                        }
                    }
                   
                </div>
                
            </div>
            <div class="mb-5">
                <h5 class="section-title position-relative text-uppercase mb-3">
                    <span class="bg-secondary pr-3">Payment</span>
                </h5>
                <div class="bg-light p-30">
                    @*<div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="paypal">
                            <label class="custom-control-label" for="paypal">Paypal</label>
                        </div>
                    </div>*@
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input onchange="typeShip()" checked="" type="radio" class="custom-control-input" name="payment" id="directcheck">
                            <label class="custom-control-label" for="directcheck">Tiền mặt</label>
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        <div class="custom-control custom-radio">
                            <input onchange="typeShip()"  type="radio" class="custom-control-input" name="payment" id="banktransfer">
                            <label class="custom-control-label" for="banktransfer">Chuyển khoản</label>
                        </div>
                    </div>
                    <button asp-action="" class="btn btn-block btn-primary font-weight-bold py-3">Place Order</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Checkout End -->